<h2>All Photos</h2>

<p>
  <strong>Photos:</strong> (<%= @photos.size %> in total)
  <table class='manage-table photo-index'>
  	<tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Description</th>
      <th>Album</th>
      <th>Show Info</th>
      <th>Edit Info</th>
      <th>Delete</th>
    </tr>
    <% @photos.each do |photo| %>
      <tr>
      	<td><%= image_tag photo.image.url(:thumb) %></td>
        <td><%= photo.name %></td>
        <td><%= photo.description %></td>
        <td><%= photo.album.name %></td>
        <td><%= link_to 'Show Info', photo, :class => 'btn' %></td>
        <td><%= link_to 'Edit Info', edit_photo_path(photo), :class => 'btn' %></td>
        <td><%= link_to 'Delete', photo, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %></td>
      </tr>
    <% end %>
  </table>
</p>

<%= link_to '+ New Photo', new_photo_path, :class => 'btn' %> 
<%= link_to 'Back', albums_path, :class => 'btn' %>

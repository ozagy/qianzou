<p id="notice"><%= notice %></p>

<h2>Manage Albums/Photos</h2>

<table class='manage-table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Order</th>
      <th>Manage Photos</th>
      <th>Edit Info</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.description %></td>
        <td><%= album.ordervalue %></td>
        <td><%= link_to 'Manage Photos', album, :class => 'btn' %></td>
        <td><%= link_to 'Edit Info', edit_album_path(album), :class => 'btn' %></td>
        <td><%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ New Album', new_album_path, :class => 'btn' %>
<%= link_to 'Show All Photos', photos_path, :class => 'btn' %>
<h2>Admin Login</h2>
<br />
<p id="alert"><%= alert %></p>
<%= form_tag do %>
<table>
	<tr>
		<td>
			<%= label_tag(:username, "Username:") %>
		</td>
		<td>
			<%= text_field_tag(:username) %>
		</td>
	</tr>
	<tr>
		<td>
			<%= label_tag(:password, "Password") %>
		</td>
		<td>
			<%= password_field_tag(:password) %>
		</td>
	</tr>
	<tr>
		<td>
			<%= submit_tag("Log in") %>
		</td>
	</tr>
</table>
<% end %>

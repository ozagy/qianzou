<%  content_for :css do %>
  <style>
    #slides {
      display: none
    }

    #slides .slidesjs-navigation {
       display:none;
    }

    .slidesjs-pagination {
      position:absolute;
      left:50%;
      margin-left:-65px;
      margin-top:6px;
      list-style: none;
      opacity:0.4;
    }

    .slidesjs-pagination li {
      float: left;
      margin: 0 1px;
    }

    .slidesjs-pagination li a {
      display: block;
      width: 13px;
      height: 0;
      padding-top: 13px;
      background-image: url(./assets/pagination.png);
      background-position: 0 0;
      float: left;
      overflow: hidden;
    }

    .slidesjs-pagination li a.active,
    .slidesjs-pagination li a:hover.active {
      background-position: 0 -13px
    }

    .slidesjs-pagination li a:hover {
      background-position: 0 -13px
    }

    #slides a:link,
    #slides a:visited {
      color: #333
    }

    #slides a:hover,
    #slides a:active {
      color: #9e2020
    }

    .navbar {
      overflow: hidden
    }
    #slides {
      display: none
    }
    .container {
      margin: 0 auto;
      width:100%;
      position:relative;
	}
	.image-wrap{
	  width: 940px;
	  height: 633px;
	  text-align:center;
	}
	.image-wrap img{
	  height: 626px;
	  margin-top: 2px;
	  display: inline;
	  border: 4px solid #fff;
	  -moz-box-shadow:1px 2px 8px #aaa;
	  -webkit-box-shadow:1px 2px 8px #aaa;
	  box-shadow:1px 2px 8px #aaa;
	}
  </style>
<% end %>

<div class="container">
  <div id="slides">
  	<div class="image-wrap"><%= image_tag("img/slide-1.jpg", :alt => "Photo by Qian Zou - Slide 1") %></div>
    <div class="image-wrap"><%= image_tag("img/slide-2.jpg", :alt => "Photo by Qian Zou - Slide 2") %></div>
    <div class="image-wrap"><%= image_tag("img/slide-8.jpg", :alt => "Photo by Qian Zou - Slide 8") %></div>
    <div class="image-wrap"><%= image_tag("img/slide-6.jpg", :alt => "Photo by Qian Zou - Slide 6") %></div>
    <div class="image-wrap"><%= image_tag("img/slide-10.jpg", :alt => "Photo by Qian Zou - Slide 10") %></div>
    <div class="image-wrap"><%= image_tag("img/slide-3.jpg", :alt => "Photo by Qian Zou - Slide 3") %></div>
    <div class="image-wrap"><%= image_tag("img/slide-4.jpg", :alt => "Photo by Qian Zou - Slide 4") %></div>
    <div class="image-wrap"><%= image_tag("img/slide-5.jpg", :alt => "Photo by Qian Zou - Slide 5") %></div>
    <div class="image-wrap"><%= image_tag("img/slide-9.jpg", :alt => "Photo by Qian Zou - Slide 9") %></div>
  </div>
</div>
<%= javascript_include_tag "jquery.slides.min.js" %>
<script>
$(function(){
	 $('#slides').slidesjs({
        width: 940,
        height: 633,
        play: {
          active: true,
          auto: true,
          interval: 4000,
          effect: "fade",
          swap: false
        },
        navigation: {
          active:false
        }
      });
});
</script>